{
  "name": "advent-of-code-2020",
  "version": "1.0.0",
  "description": "advent-of-code-2020",
  "main": "index.js",
  "dependencies": {
    "@types/node": "^14.14.13"
  },
  "devDependencies": {
    "@babel/plugin-transform-typescript": "^7.12.1",
    "@babel/preset-typescript": "^7.12.7",
    "@types/jest": "^26.0.19",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JudoboyAlex/advent-of-code-2020.git"
  },
  "author": "Alexander G. Yang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JudoboyAlex/advent-of-code-2020/issues"
  },
  "homepage": "https://github.com/JudoboyAlex/advent-of-code-2020#readme",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/*.(test|spec).(ts|tsx)"
    ],
    "globals": {
      "ts-jest": {
        "babelConfig": true,
        "tsConfig": "jest.tsconfig.json"
      }
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "text-summary"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/mocks.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/mocks.js"
    }
  }
}
